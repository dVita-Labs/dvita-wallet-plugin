{
    "compileOnSave": false,
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["src/*"],
          "@styles/*": ["src/styles/*"],
          "@assets/*": ["src/assets/*"],
          "@images/*": ["src/assets/images/*"],
          "@fonts/*": ["src/assets/fonts/*"],
          "@app/*": ["src/app/*"],
          "@models/*": ["src/models/*"],
          "@share/*": ["src/app/share/*"],
          "@popup/*": ["src/app/popup/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts",
        "./global.d.ts",
        "./extension/sharedEnvironment.ts",
        "./extension/shared.ts"
    ],
    "exclude": ["extension", "node_modules"]
}
